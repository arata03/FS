<Window x:Class="fs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fs"
        mc:Ignorable="d"
        Title="FileSearch" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="399" VerticalAlignment="Top" Width="456" Margin="10,10,0,0" SelectionChanged="listBox_SelectionChanged" FontSize="10"/>
        <TextBox x:Name="fileBox" HorizontalAlignment="Left" Height="23" Margin="471,10,0,0" TextWrapping="Wrap" Text="File" VerticalAlignment="Top" Width="311"/>
        <TextBox x:Name="optionBox" HorizontalAlignment="Left" Height="23" Margin="471,38,0,0" TextWrapping="Wrap" Text="Option" VerticalAlignment="Top" Width="311"/>
        <Button x:Name="openButton" Content="Open" HorizontalAlignment="Left" Margin="707,66,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
